#--------------------------------------------------------------------------------------------------------------
# build
#--------------------------------------------------------------------------------------------------------------
# Build the wind_river_test docker image
#--------------------------------------------------------------------------------------------------------------
docker/wind_river_test/build: docker/wind_river_release/build
	docker build -f docker/release/wind_river/wind_river_test/wind_river_test.Dockerfile -t wind_river_test:0.0.0 .

#--------------------------------------------------------------------------------------------------------------
# test
#--------------------------------------------------------------------------------------------------------------
# Test the wind_river_test docker image
#--------------------------------------------------------------------------------------------------------------
docker/wind_river_test/test: bazel/test docker/wind_river_test/build
	docker run wind_river_test:0.0.0

#--------------------------------------------------------------------------------------------------------------
# run
#--------------------------------------------------------------------------------------------------------------
# Run to the wind_river_test docker image
#--------------------------------------------------------------------------------------------------------------
docker/wind_river_test/run: docker/wind_river_test/build
	docker run -it --entrypoint /bin/sh wind_river_test:0.0.0

#--------------------------------------------------------------------------------------------------------------
#
# End wind_river_test make targets
