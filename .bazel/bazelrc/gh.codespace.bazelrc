#--------------------------------------------------------------------------------------------------------------
# global
#--------------------------------------------------------------------------------------------------------------

build --action_env WORKSPACE_DIR="/workspaces/edo-demo"

test --test_output=all

#--------------------------------------------------------------------------------------------------------------
# C++
#--------------------------------------------------------------------------------------------------------------
build:aarch64 --crosstool_top=//.bazel/cpp/cross_compile/toolchains/aarch64:linaro_aarch64
build:aarch64 --cpu=aarch64
build:aarch64 --host_crosstool_top=@bazel_tools//tools/cpp:toolchain


#--------------------------------------------------------------------------------------------------------------
# python
#--------------------------------------------------------------------------------------------------------------
build --action_env PYTHON_BIN_PATH="/usr/bin/python3"
build --action_env PYTHON_LIB_PATH="/usr/lib/python3/dist-packages"
build --python_path="/usr/bin/python3"
