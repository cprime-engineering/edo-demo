{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Configure pre-commit",
			"type": "shell",
			"command": "pre-commit install && pre-commit install-hooks",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Generate compile_commands.json",
			"type": "shell",
			"command": "make bazel/generate/compile_commands",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
	]
}
